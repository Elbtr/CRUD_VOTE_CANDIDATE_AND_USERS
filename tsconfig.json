{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/types/index.d.ts"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/types/index.d.ts"]
}
